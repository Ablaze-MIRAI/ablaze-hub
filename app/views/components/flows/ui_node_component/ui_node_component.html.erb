
<% if @messages.length > 0 %>
  <div>
    <% @messages.each do |message| %>
      <p><%= message["text"] %></p>
    <% end %>
  </div>
<% end %>

<% if @meta && @meta["label"] %>
  <label for="<%= @name %>"><%= @meta["label"]["text"] %></label>
<% end %>

<input
  type='<%= @type %>'
  <%= 'required' if @required %>
  aria-label="<%= @name %>"
  id="<%= helpers.get_random_id %>"
  name="<%= @name %>"
  <%= 'disabled' if @disabled %>
  value="<%= @value %>"
  <%= 'autocomplete' if @autocomplete %>
  <%= 'formnovalidate' if @name == 'provider' %>
  />