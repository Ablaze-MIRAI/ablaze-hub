<div>
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar.variant(resize_to_limit: [100, 100]) %>
  <% end %>
  <%= form_with url: settings_profile_path, method: :put do |f| %>
    <div class="flex flex-col space-y-4">
      <div>
        <%= f.label :avatar, class: "text-lg" %>
        <%= f.file_field :avatar %>
        <div>
          <%= f.submit "Update", class: "bg-blue-500 text-white rounded-md px-4 py-2" %>
        </div>
      </div>
  <% end %>

  <pre>
    <%= JSON.pretty_generate(@identity) %>
  </pre>
  </div>
</div>
