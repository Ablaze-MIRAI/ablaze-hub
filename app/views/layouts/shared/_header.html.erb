<header
  class="supports-backdrop-blur:bg-background/60 sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur">
  <%= render 'layouts/shared/theme-toggle' %>
  <div data-turbo-prefetch="false">
    <% if is_logged_in? %>
      <%= link_to "Who am I", whoami_path, class: "underline my-2" %>
      <a href="<%= @logout_url %>">Logout</a>
    <% else %>
      <%= link_to "Register", registration_path, class: "underline mt-4" %>
      <%= link_to "Login", login_path, class: "underline" %>
    <% end %>
  </div>
</header>