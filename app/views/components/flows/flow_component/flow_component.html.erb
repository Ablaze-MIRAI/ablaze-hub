<% if @show %>
  <%= render ApplicationComponent.new(**@options) do %>
    <% messages.each do |message| %>
      <p <%= "class=text-destructive" if message["type"] == "error" %>>
        <%= message["text"] %>
      </p>
    <% end %>
    <%= render @action_url %>
    <% items.each do |item| %>
      <%= item %>
    <% end %>
  <% end %>
<% end %>