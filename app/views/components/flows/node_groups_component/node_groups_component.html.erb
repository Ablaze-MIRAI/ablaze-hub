<% if @nodes.present? && @nodes.length > 0 %>
  <% if @title %>
    <h3 class="text-2xl mb-6">
      <%= @title %>
    </h3>
  <% end %>
  <%= form_with url: @submit_path || @action_url, html: {class: @classes}, method: @method do |f| %>
    <% if @submit_path != @action_url && @action_url.present? %>
      <%= hidden_field_tag :action_url, @action_url %>
    <% end %>
    <% @nodes.each do |node| %>
      <%= render node %>
    <% end %>
  <% end %>
<% end %>